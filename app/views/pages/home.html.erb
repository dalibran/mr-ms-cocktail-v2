<!-- creates main border and positions content within -->
<div class="main-border vertical-align">
  <div class="row vertical-align">
    <div class="col s12 l6 justify-content">
      <div class="card-custom z-depth-5">
        <div class="border-top"></div>
        <div class="card-border"></div>
        <div class="border-bottom"></div>
        <div class="avatar-and-title center-position-avatar-card">
          <%= image_tag 'avatar.jpg', class: 'avatar' %>
          <p>  The Dana</p>
        </div>
        <div class="ingredients">
          <ul>
            <li>
              <%= image_tag 'champagne.svg', class: 'svg ingredients' %>
              <p>12 buckets of champagne</p>
            </li>
            <li>
              <%= image_tag 'wave.svg', class: 'svg ingredients' %>
              <p>1 epic swell brah</p>
            </li>
            <li>
              <%= image_tag 'bacon.svg', class: 'svg ingredients' %>
              <p>1 tray of bacon</p>
            </li>
          </ul>
        </div>
        <div class="instructions">
          <p>Served over ice, straight chill.</p>
        </div>
        <div class="card-logo center-position-logo-card">
          <%= image_tag 'bartender-male.svg', height: 20 , width: 20 %>
          <p>  Mixed by Mr.Cocktail</p>
        </div>
      </div>
    </div>
    <div class="col s12 l6">
      <div class="product-info center-align">
        <p>Create fun cocktail recipes for your friends. Sign in with Facebook to get started!</p>
        <%= link_to comingsoon_path, class: 'btn-signin' do %>
          <%= image_tag 'facebook.svg', class: 'svg'  %>  Sign in with Facebook
        <% end %>
      </div>
    </div>
  </div>
</div>
